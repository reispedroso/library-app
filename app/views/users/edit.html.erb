<h1>Editar Perfil</h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  <p>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email, "E-mail" %><br>
    <%= form.email_field :email %>
  </p>

  <p>
    <%= form.submit "Atualizar" %>
  </p>
<% end %>
